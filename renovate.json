{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    ":pinAllExceptPeerDependencies",
    ":semanticCommits"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "astro",
        "^@astrojs"
      ],
      "groupName": [
        "astrojs packages"
      ]
    },
    {
      "matchPackagePatterns": [
        "playwright",
        "mcr.microsoft.com/playwright"
      ],
      "groupName": [
        "playwright"
      ]
    }
  ]
}