---
import BaseHead from "../components/BaseHead.astro";

export interface Props {
    title: string;
    description: string;
}

let { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <BaseHead title={title} description={description} />
        <style is:global>
            @tailwind base;
            @tailwind components;
            @tailwind utilities;
        </style>
        <slot name="extra-head" />
    </head>
    <!-- TODO: Probably set default background to full white for printing resume, then override on other pages (or the reverse? Only overwrite to full white for resume) -->
    <body
        class="min-h-screen text-slate-900 dark:text-slate-100 bg-white dark:bg-zinc-800 flex flex-col"
    >
        <slot />
    </body>
</html>
