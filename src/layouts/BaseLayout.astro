---
import "../assets/css/fonts.css";
import "../assets/css/line-awesome.min.css";
import BaseHead from "../components/BaseHead.astro";

export interface Props {
    title: string;
    description: string;
    image: string;
}

let { title, description, image } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <BaseHead title={title} description={description} image={image} />
        <style is:global>
            @tailwind base;
            @tailwind components;
            @tailwind utilities;
        </style>
        <slot name="extra-head" />
    </head>
    <body
        class="min-h-screen text-slate-900 dark:text-slate-100 bg-white dark:bg-zinc-800 flex flex-col"
    >
        <slot />
    </body>
</html>
