---
export interface Props {
    title?: string;
    justifyText?: boolean;
}

const { title, justifyText = true } = Astro.props;
---

<div class="w-full flex flex-col md:flex-row md:gap-6 mb-2 md:mb-4">
    <div class="flex md:justify-end md:w-1/3">
        <h2 slot="title" class="text-right font-bold text-2xl">
            {title}
        </h2>
    </div>
    <div
        class:list={[
            { "text-justify": justifyText },
            "flex-1 prose prose-zinc dark:prose-invert prose-h1:mb-2 prose-h2:mt-0 prose-h2:mb-1 prose-h3:mt-0 prose-li:m-0",
        ]}
    >
        <slot />
    </div>
</div>
