---
export interface Props {
    post: {
        frontmatter: {
            title: string;
            description: string;
            pubDate?: string;
            updatedDate?: string;
            heroImage?: string;
            heroImageAlt?: string;
        };
        url: string;
    };
}

const {
    post: {
        frontmatter: {
            title,
            description,
            pubDate,
            updatedDate,
            heroImage,
            heroImageAlt,
        },
        url,
    },
} = Astro.props;
---

<a href={url} aria-label="Read blog post">
    <div
        class="h-full w-full flex flex-col shadow-sm rounded-xl border dark:border-slate-600 group transition ease-out delay-200 hover:-translate-y-1 hover:scale-105 hover:shadow-xl"
    >
        <img
            src={heroImage ?? "/placeholder-hero.jpg"}
            alt={heroImageAlt}
            class="w-full h-auto rounded-t-xl"
        />
        <div
            class="flex flex-col gap-2 flex-1 bg-gray-50 dark:bg-zinc-900 rounded-b-xl p-1 md:p-2"
        >
            <div class="flex flex-row justify-between items-center">
                <div>
                    <h3 class="text-lg font-bold">
                        {title}
                    </h3>
                    <time class="text-sm text-slate-400" datetime={pubDate}
                        >{pubDate}</time
                    >
                </div>
                <div
                    class="bg-purple-600 transition ease-out delay-200 group-hover:bg-cyan-500 text-slate-100 rounded-xl p-2"
                >
                    Read post <i class="las la-long-arrow-alt-right"></i>
                </div>
            </div>
            <p>
                {description}
            </p>
        </div>
    </div>
</a>
